<html>

	<head>
		{% block title %}
			{# List des Articles #}
		{% endblock %}

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
	</head>
	<body>
		{% block body %}
			{{include('inc/nav.html.twig')}}
			<h1>
				Articles
			</h1>


			{% if articles%}

				<table class="table" id="articles">
					<thead>
						<tr>
							<th>Nom Article</th>
							<th>Prix</th>
							<th>Category</th>
							<th>Actions</th>

						</tr>
					</thead>
					<tbody>
						{% for article in articles %}
							<tr>
								<td>{{article.nom}}</td>
								<td>{{article.prix}}</td>
								<td>{{article.category.titre}}</td>
								<td>
									<a href="/article/{{article.id}}" class="btn btn-dark">Details</a>
									<a href="/article/edit/{{article.id}}" class="btn btn-primary">Edit</a>
									<a href="/article/delete/{{article.id}}" class="btn btn-danger" onclick="return confirm('Etes_vous sur de supprimer cet article?');">Supprimer</a>
								</td>

							</tr>
						{% endfor %}
					</tbody>
				</tbody>
			</table>

		{% else %}
			<p>Aucun articles</p>
		{% endif %}

	{% endblock %}


	{% block javascript %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
	{% endblock %}
</html></body></html>
